{
  "type": "object",
  "title": "Register Employee",
  "properties": {
    "firstname": {
      "title": "First Name",
      "type": "string",
      "pattern": "^[a-zA-Z]*$",
      "validationMessage": "Name contains only Alphabetic Characteres.",
      "maxLength": 15,
      "minLength": 3
    },
    "lastname": {
      "title": "Last Name",
      "type": "string",
      "pattern": "^[a-zA-Z]*$",
      "validationMessage": "Name contains only Alphabetic Characteres.",
      "maxLength": 15,
      "minLength": 3
    },
    "email": {
      "title": "Email",
      "type": "string",
      "pattern": "^\\S+@\\S+$",
      "description": "Password will be used for login."
    },
    "gender": {
      "title": "Gender",
      "type": "string"
    },
    "mobile": {
      "title": "Mobile Number",
      "type": "string",
      "minLength": 10,
      "maxLength": 10
    },
    "dob": {
      "title": "Date of Birth",
      "type": "date"
    },
    "salaryformat": {
      "title": "Currency Type",
      "type": "string"
    },
    "salary": {
      "title": "Salary",
      "type": "number",
      "pattern": "^[1-9]+[0-9]*$"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 8
    },
    "repassword": {
      "title": "Confirm Password",
      "type": "string",
      "minLength": 8
    }
  },
  "required": [
    "firstname",
    "lastname",
    "email",
    "gender",
    "mobile",
    "dob",
    "salaryformat",
    "salary",
    "password",
    "repassword"
  ]
}
